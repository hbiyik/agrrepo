eval "$(curl -s -L https://raw.githubusercontent.com/hbiyik/agrrepo/refs/heads/master/libinherit/remote.sh)"
inherit https://gitlab.archlinux.org/archlinux/packaging/packages/dolphin-emu/-/raw/main

arch+=("aarch64" "armv7h")
source+=("001-qt6.patch::https://github.com/dolphin-emu/dolphin/pull/14008/commits/b3bdad416ca0a6a604dca12bed7bd00542092d25.patch"
         "002-localtime.patch::https://github.com/dolphin-emu/dolphin/pull/13727.patch")
b2sums+=("SKIP")
b2sums+=("SKIP")

prepare(){
  old_prepare
  cd $srcdir/dolphin-emu
  patch -N -p1 -i ../001-qt6.patch
  patch -N -p1 -i ../002-localtime.patch
}
