# use slightly older vesion 139.0.1 since 140.x has major video decoding differences and mpp patch needs to be rewritten
_pkgbuild_base=3e28f44b9a89ad7282f4757de2cdd8371793cd38
eval "$(curl -s -L https://raw.githubusercontent.com/hbiyik/agrrepo/refs/heads/master/libinherit/remote.sh)"
inherit https://raw.githubusercontent.com/archlinuxarm/PKGBUILDs/$_pkgbuild_base/extra/firefox/

_gecko_base=4c065f1df299065c305fb48b36cdae571a43d97c
_gecko_branch=mpp-release
source+=("mpp.patch::https://github.com/hbiyik/gecko-dev/compare/${_gecko_base}...${_gecko_branch}.patch")
sha256sums+=("SKIP")
b2sums+=("SKIP")
arch+=("aarch64" "arm7f")
provides=(firefox)
conflicts=(firefox)
pkgrel=2

_pkgname=firefox-mpp
old_pkgname=$pkgname
pkgname=$_pkgname


prepare(){
  # patch with extra stuff
  cd $srcdir/firefox-$pkgver
  patch -p1 -N -i ../mpp.patch
  cd $srcdir
  pkgname=$old_pkgname
  old_prepare
  pkgname=$_pkgname
}

build(){
  # pkgname is used in the build as variable so swap it
  pkgname=$old_pkgname
  old_build
  pkgname=$_pkgname
}

package(){
  # pkgname is used in the package as variable so swap it
  pkgname=$old_pkgname
  old_package
  pkgname=$_pkgname
}
